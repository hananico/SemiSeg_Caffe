name: "segnet_encode_decode"
layer {
  name: "data"
  type: "DenseImageData"
  top: "data"
  top: "label"
  dense_image_data_param {
    source: "SegNet/SiftFlow/train_quad_shuf_10.txt"	# Change this to the absolute path to your data file
    batch_size: 16   			# Change this number to a batch size that will fit on your GPU
    #shuffle: true
  }
  include {
    phase: TEST
  }
}

layer {
  name: "data_n"
  type: "DenseImageData"
  top: "data_n"
  top: "label_n"
  dense_image_data_param {
    source: "SegNet/SiftFlow/train_quad_shuf_90.txt"	# Change this to the absolute path to your data file
    batch_size: 16  			# Change this number to a batch size that will fit on your GPU
    #shuffle: true
  }
  include {
    phase: TRAIN
  }
}
layer {
    name: "silence"
    type: "Silence"
    bottom: "label_n"
 include {
    phase: TRAIN
  }
}
layer{
  name: "gauss_noise"
  type: "DummyData"
  dummy_data_param{
    data_filler{
      type:"gaussian"
      std: 5
    }
    shape:{
      dim: 16
      dim: 3
      dim: 256
      dim: 256
    }
  }
  top: "gauss_noise"
  include {
    phase: TRAIN
  }
}


layer{
  name: "noise_drop"
  type: "Dropout"
  bottom: "gauss_noise"
  top: "gauss_noise"
  include {
    phase: TRAIN
  }
  dropout_param {
     dropout_ratio: 0.9
  }
}


layer {
  name: "add_noise"
  type: "Eltwise"
  bottom: "data_n"
  bottom: "gauss_noise"
  top: "data_n"
  include {
    phase: TRAIN
  }
  eltwise_param {
    operation:SUM
  }
}

 

